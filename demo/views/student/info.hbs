<div class="container text-center">
   <div class="row">
      <div class="col-md-4">
         <img class="img-thumbnail" src="{{student.image}}" width="350" height="350">
      </div>
      <div class="col-md-6">
         <table class="table table-bordered text-center mt-4">
            <tr>
               <th colspan="2" class="text text-bg-success">STUDENT INFO</th>
            </tr>
            <tr>
               <th>Name</th>
               <th>{{student.name}}</th>
            </tr>
            <tr>
               <th>Email</th>
               <th>{{student.email}}</th>
            </tr>
            <tr>
               <th>Gender</th>
               <th>{{student.gender}}</th>
            </tr>
            <tr>
               <th>Birthday</th>
               <th>{{dateFormat student.dob "DD/MM/YYYY"}}</th>
            </tr>
            <tr>
               <th>Grade</th>
               <th>{{student.grade}}</th>
            </tr>
         </table>
      </div>
   </div>
</div>