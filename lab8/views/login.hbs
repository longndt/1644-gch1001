<div class="container col-md-6 text-center">
  <form action="/login" method="post" class="card bg-light p-3">
    <h1 class="text-danger">USER LOGIN</h1>
    <div class="form-group mt-3">
      <input
        class="form-control"
        type="text"
        name="username"
        required
        placeholder="Enter username"
      />
    </div>
    <div class="form-group mt-3">

      <input
        class="form-control"
        type="password"
        name="password"
        placeholder="Enter password"
        required
      />
    </div>
    <div class="form-group mt-3">
      <input class="btn btn-warning" type="submit" value="Login" />
    </div>
  </form>
</div>